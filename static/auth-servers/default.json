{
  "id": "default-auth",
  "desc": "Default Authorization Server",
  "authMethods": [
    {
      "enabled": true,
      "name": "local",
      "type": "local",
      "friendlyShort": "Username and Password",
      "friendlyLong": "Log in using a local username and password.",
      "config": {
        "trustUsers": false
      }
    },
    {
      "enabled": false,
      "type": "local",
      "name": "test",
      "friendlyShort": "Short friendly name",
      "friendlyLong": "Long friendly name",
      "config": {
        "trustUsers": false,
        "disableSignup": false
      }
    }
  ],
  "config": {
    "api": {
      "name": "default-auth",
      "upstream_url": "$PORTAL_AUTHSERVER_URL",
      "routes": [
        {
          "paths": [
            "/auth"
          ],
          "strip_path": false,
          "preserve_host": false
        }
      ],
      "strip_uri": false,
      "uris": [
        "/auth"
      ]
    },
    "plugins": [
      {
        "name": "correlation-id",
        "config": {
          "header_name": "Correlation-Id",
          "generator": "uuid",
          "echo_downstream": false
        }
      }
    ]
  }
}